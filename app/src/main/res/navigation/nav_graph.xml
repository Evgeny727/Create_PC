<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.createpc.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_startFragment_to_buildsFragment"
            app:destination="@id/buildsFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.createpc.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_startFragment"
            app:destination="@id/startFragment" />
        <action
            android:id="@+id/action_searchFragment_to_buildsFragment"
            app:destination="@id/buildsFragment" />
    </fragment>

    <fragment
        android:id="@+id/buildsFragment"
        android:name="com.example.createpc.BuildsFragment"
        android:label="fragment_builds"
        tools:layout="@layout/fragment_builds" >
        <action
            android:id="@+id/action_buildsFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_buildsFragment_to_startFragment"
            app:destination="@id/startFragment" />
    </fragment>
</navigation>